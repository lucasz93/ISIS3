<?xml version="1.0" encoding="UTF-8"?>

<application name="mar9mlrp" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://isis.astrogeology.usgs.gov/Schemas/Application/application.xsd">
  <brief>
   Mariner 9 dstripe
  </brief>

  <description>
    <p>
      MAR9DSTRIPE removes the worst of the hot pixels that run along a line.
      This should be run after MAR9RADIOM, because the Mariner 9 shading cubes also contain these noise stripes
      (and would therefore reapply the stripes).
    </p>
  </description>

  <category>
    <missionItem>Mariner 9</missionItem>
  </category>

  <history>
    <change name="Lucas Zadrozny" date="2023-01-06">
      Original version
    </change>
  </history>

  <groups>
    <group name="Files">
      <parameter name="FROM">
        <type>cube</type>
        <fileMode>input</fileMode>
        <brief>
          Input file to be restored
        </brief>
        <description>
          An input file which needs reconstruction.
        </description>
        <filter>
          *.cub
        </filter>
      </parameter>

      <parameter name="TO">
        <type>cube</type>
        <fileMode>output</fileMode>
        <brief>
          Output cube
        </brief>
        <description>
          Reconstructed cube.
        </description>
        <filter>
          *.cub
        </filter>
      </parameter>
    </group>
  </groups>

</application>

